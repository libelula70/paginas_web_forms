include ./mixin.pug

doctype
html(lang=idioma)
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title=titulo
    body
        header
            h1=titulo
            block header
                img(src="./assets/main.jpg", alt="")
        nav
            +menu(aSecciones)
        main
            block main
        footer
            +menu(aSocial)
            address #{autor} 
            small &copy; #{empresa} - #{localidad}